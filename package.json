{
  "name": "boltzmann-analyser",
  "displayName": "Boltzmann Analyser",
  "description": "Analyses Lexical Complexity of code",
  "repository": "https://github.com/boltzmann-analysis/boltzmann-vscode",
  "publisher": "BoltzmannAnalyser",
  "version": "0.0.16",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "boltzmann-analyser.HighlightToggle",
        "title": "Boltzmann Analyser: Toggle Highlighting"
      },
      {
        "command": "boltzmann-analyser.AnalyseProject",
        "title": "Boltzmann Analyser: Analyse Project"
      },
      {
        "command": "boltzmann-analyser.ToggleAttenuation",
        "title": "Boltzmann Analyser: Toggle Attenuation"
      }
    ],
    "configuration": {
      "title": "Boltzmann Analyser",
      "properties": {
        "boltzmann-analyser.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Boltzmann analyzer binary. Leave empty to use 'boltzmann_analyser' from PATH.",
          "scope": "machine-overridable"
        },
        "boltzmann-analyser.attenuation": {
          "type": "boolean",
          "default": false,
          "description": "Enable attenuation of complexities",
          "scope": "resource"
        },
        "boltzmann-analyser.complexityThreshold": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum complexity threshold (0-1). Only nodes with normalized complexity above this value will be highlighted. Set to 0 to show all nodes, or closer to 1 to show only the most complex nodes.",
          "scope": "resource"
        },
        "boltzmann-analyser.highlightAlpha": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Transparency level for complexity highlights (0-1). Lower values are more transparent, higher values are more opaque.",
          "scope": "resource"
        },
        "boltzmann-analyser.minComplexityPerLoc": {
          "type": "number",
          "default": 80,
          "minimum": 0,
          "description": "Minimum absolute complexity per line of code. Nodes with complexity per LOC below this value will not be highlighted, regardless of relative complexity.",
          "scope": "resource"
        },
        "boltzmann-analyser.analysisMode": {
          "type": "string",
          "enum": [
            "local",
            "remote"
          ],
          "default": "local",
          "description": "Analysis mode: 'local' uses the CLI tool, 'remote' uses an API server.",
          "scope": "machine-overridable"
        },
        "boltzmann-analyser.remoteServerUrl": {
          "type": "string",
          "default": "https://api.boltzmann.co.uk",
          "description": "URL of the remote analysis server (used when analysisMode is 'remote').",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "vsce:package": "vsce package --no-dependencies",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "release:patch": "npm version patch && git push && git push --tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
